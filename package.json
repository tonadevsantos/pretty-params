    "@radix-ui/react-slot": "^1.1.1",
    "@types/firefox-webext-browser": "^120.0.4",
    "@wxt-dev/browser": "^0.0.318",
    "beachball": "^2.54.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.473.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.54.2",
    "tailwind-merge": "^2.6.0",
