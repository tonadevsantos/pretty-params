{
  "name": "pretty-params",
  "version": "0.5.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.11.0",
    "repository": {
    "type": "git",
    "url": "https://github.com/tonadevsantos/pretty-params"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite build --watch --mode development",
    "dev:chrome": "cross-env BROWSER=chrome npm run dev",
    "dev:firefox": "cross-env BROWSER=firefox npm run dev",
    "build": "vite build",
    "build:chrome": "cross-env BROWSER=chrome vite build --mode production && web-ext build -s dist/chrome -a dist/ext/chrome",
    "build:firefox": "cross-env BROWSER=firefox vite build --mode production && web-ext build -s dist/firefox -a dist/ext/firefox",
    "style": "prettier --check \"src/**/*.{ts,tsx}\"",
    "style:fix": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "Tona Gonz√°lez <hi@tona.dev>",
  "license": "MIT",
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
